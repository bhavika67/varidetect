<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:background="@android:color/transparent"
    tools:context=".Fragment.FAQ.FAQFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_help"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/roboto_bold"/>


            <RelativeLayout
                android:id="@+id/layoutWorks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@id/toolbar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_it_works"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/roboto_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_forward_ios"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:tint="@color/black" />

            </RelativeLayout>

            <View
                android:id="@+id/viewLineWorks"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/layoutWorks"
                android:background="@color/gray"/>

            <RelativeLayout
                android:id="@+id/layoutFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/viewLineWorks">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faqs"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/roboto_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_forward_ios"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:tint="@color/black" />

            </RelativeLayout>

            <View
                android:id="@+id/viewLineFaq"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/layoutFaq"
                android:background="@color/gray"/>

            <RelativeLayout
                android:id="@+id/layoutSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/viewLineFaq">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_support"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/roboto_regular"/>



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_forward_ios"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:tint="@color/black" />

            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>